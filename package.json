{
  "name": "shared-media-streaming",
  "version": "0.0.1",
  "description": "A shared media streaming web app",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development turbo run dev --parallel",
    "build": "turbo run build",
    "build:backend": "tsc -p apps/backend/tsconfig.json",
    "build:shared": "tsc -p packages/shared/tsconfig.json",
    "start:prod": "NODE_ENV=production node apps/backend/dist/index.js",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "fmt": "npx prettier . --write",
    "check-types": "turbo run check-types",
    "clean": "rm -rf node_modules",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buildiverse/shared-media-streaming.git"
  },
  "author": "Buildiverse",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/buildiverse/shared-media-streaming/issues"
  },
  "homepage": "https://github.com/buildiverse/shared-media-streaming#readme",
  "dependencies": {
    "aws-sdk": "^2.1692.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "mongodb": "^6.18.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "biome": "^0.3.3",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*"
  ],
  "engines": {
    "node": ">=18"
  }
}