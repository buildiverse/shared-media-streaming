{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}