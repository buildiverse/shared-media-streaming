  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon --watch src --exec ts-node src/index.ts",
    "dev:local": "NODE_ENV=development nodemon --watch src --exec ts-node src/index.ts",
    "build": "tsc -p tsconfig.json",
    "build:prod": "NODE_ENV=production tsc -p tsconfig.json",
    "start": "NODE_ENV=production node dist/index.js",
    "start:dev": "NODE_ENV=development node dist/index.js",
    "prod": "pnpm run build:prod && pnpm run start",
    "prod:pm2": "pnpm run build:prod && pm2 start ecosystem.config.js --env production",
    "prod:docker": "docker build -t shared-media-streaming-backend . && docker run -p 3000:3000 --env-file .env.production shared-media-streaming-backend",
    "clean": "rm -rf dist",
    "prebuild": "pnpm run clean",
    "test": "echo \"Error: no test specified\" && exit 1"
