{
	"name": "backend",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"dev": "NODE_ENV=development nodemon --watch src --exec ts-node src/index.ts",
		"dev:local": "NODE_ENV=development nodemon --watch src --exec ts-node src/index.ts",
		"build": "tsc -p tsconfig.json && cp -r src/infrastructure/data dist/infrastructure/",
		"build:prod": "NODE_ENV=production tsc -p tsconfig.json && cp -r src/infrastructure/data dist/infrastructure/",
		"start": "NODE_ENV=production node dist/index.js",
		"start:dev": "NODE_ENV=development node dist/index.js",
		"prod": "pnpm run build:prod && pnpm run start",
		"prod:pm2": "pnpm run build:prod && pm2 start ecosystem.config.js --env production",
		"prod:docker": "docker build -t shared-media-streaming-backend . && docker run -p 3000:3000 --env-file .env.production shared-media-streaming-backend",
		"clean": "rm -rf dist",
		"prebuild": "pnpm run clean",
		"lint": "eslint src/**/*.ts --config ../../eslint.config.js",
		"format": "prettier --write src/**/*.ts",
		"type-check": "tsc --noEmit",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@types/express": "^4.17.21",
		"@types/uuid": "^10.0.0",
		"aws-sdk": "^2.1692.0",
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"dotenv": "^17.2.1",
		"express": "^4.19.2",
		"express-mongo-sanitize": "^2.2.0",
		"express-rate-limit": "^8.0.1",
		"helmet": "^8.1.0",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.17.0",
		"multer": "^2.0.2",
		"socket.io": "^4.8.1",
		"socket.io-ratelimiter": "^1.2.3",
		"stripe": "^18.5.0",
		"uuid": "^11.1.0",
		"zod": "^4.1.1"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.6",
		"@types/cors": "^2.8.19",
		"@types/jest": "^30.0.0",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/multer": "^2.0.0",
		"@types/node": "^24.2.0",
		"@types/supertest": "^6.0.3",
		"jest": "^30.0.5",
		"nodemon": "^3.1.10",
		"pm2": "^5.3.0",
		"supertest": "^7.1.4",
		"ts-jest": "^29.4.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.2"
	}
}
